# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Bot API Local (REQUIRED - for files up to 2GB)
# MUST be 'true' to handle large PDF files
USE_LOCAL_API=true
# URL of local Telegram Bot API server
TELEGRAM_API_URL=http://localhost:8081

# Telegram API Credentials (get from https://my.telegram.org/apps)
# Required to run local Telegram Bot API server
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# AI Model Configuration (choose one or configure multiple)
# Google AI
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-1.5-pro

# Anthropic Claude (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI (optional)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4-turbo

# Default Model Provider (google, anthropic, openai)
AI_PROVIDER=google

# Logging
LOG_LEVEL=info
